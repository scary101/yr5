<Window x:Class="yp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Заголовок окна -->
        <TextBlock Text="Авторизация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <!-- Имя пользователя -->
        <TextBlock Text="Имя пользователя:" Margin="30,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="UsernameTextBox" Width="200" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top"/>

        <!-- Пароль (с Masked вводом) -->
        <TextBlock Text="Пароль:" Margin="30,120,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Width="200" HorizontalAlignment="Left" Margin="150,120,0,0" VerticalAlignment="Top"/>

        <!-- Кнопка входа -->
        <Button Content="Войти" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20" Click="LoginButton_Click"/>
    </Grid>
</Window>
